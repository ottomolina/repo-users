package com.gsa.service;

import javax.ws.rs.Consumes;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.gsa.ctrl.AplicacionServiceCtrl;
import com.gsa.ctrl.PermisoServiceCtrl;
import com.gsa.data.RequestData;
import com.gsa.data.ResponseData;
import com.gsa.interfaces.IService;

@RestController
@RequestMapping(value = "/gsa-backend/rest/api/permiso")
@Consumes("application/json")
public class PermisoServiceImpl implements IService {
	@Autowired
	private PermisoServiceCtrl service;
	
	@Override
	@RequestMapping(value="/save", method=RequestMethod.POST)
	public ResponseData save(@RequestBody RequestData request) {
		return service.savePermiso(request);
	}
	
	@Override
	@RequestMapping(value="/getInfo", method=RequestMethod.POST)
	public ResponseData getInfo(@RequestBody RequestData request) {
		return service.getInfoPermiso(request);
	}
	
	@Override
	@RequestMapping(value="/update", method=RequestMethod.POST)
	public ResponseData update(@RequestBody RequestData request) {
		return service.updatePermiso(request);
	}
	
	@Override
	@RequestMapping(value="/delete", method=RequestMethod.POST)
	public ResponseData delete(@RequestBody RequestData request) {
		return service.deletePermiso(request);
	}

}
