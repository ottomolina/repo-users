package com.gsa.endpoint;

import javax.ws.rs.Consumes;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.gsa.ctrl.EstadoServiceCtrl;
import com.gsa.data.RequestData;
import com.gsa.data.ResponseData;
import com.gsa.interfaces.IService;

@RestController
@RequestMapping(value = "/gsa-backend/rest/api/estado")
@Consumes("application/json")
public class EstadoServiceImpl implements IService {
	@Autowired
	private EstadoServiceCtrl service;
	
	@Override
	@RequestMapping(value="/save", method=RequestMethod.POST)
	public ResponseData save(@RequestBody RequestData request) {
		return service.saveEstado(request);
	}
	
	@Override
	@RequestMapping(value="/getInfo", method=RequestMethod.POST)
	public ResponseData getInfo(@RequestBody RequestData request) {
		return service.getInfoEstado(request);
	}
	
	@Override
	@RequestMapping(value="/update", method=RequestMethod.POST)
	public ResponseData update(@RequestBody RequestData request) {
		return service.updateEstado(request);
	}
	
	@Override
	@RequestMapping(value="/delete", method=RequestMethod.POST)
	public ResponseData delete(@RequestBody RequestData request) {
		return service.deleteEstado(request);
	}
	
}
