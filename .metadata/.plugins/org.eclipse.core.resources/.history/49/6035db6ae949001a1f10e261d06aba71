package com.gsa.endpoint;

import javax.ws.rs.Consumes;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.gsa.ctrl.TablaServiceCtrl;
import com.gsa.data.RequestData;
import com.gsa.data.ResponseData;
import com.gsa.interfaces.ITablaService;

@RestController
@RequestMapping(value = "/gsa-backend/rest/api")
@Consumes("application/json")
public class TablaServiceImpl implements ITablaService {
	@Autowired
	private TablaServiceCtrl service;

	@Override
	@RequestMapping(value="/save", method=RequestMethod.POST)
	public ResponseData saveTabla(@RequestBody RequestData request) {
//		service = new TablaServiceCtrl();
		return service.saveTabla(request);
	}

	@Override
	@RequestMapping(value="/getInfo", method=RequestMethod.POST)
	public ResponseData getInfoTabla(@RequestBody RequestData request) {
		return service.getListTabla(request);
	}

	@Override
	@RequestMapping(value="/update", method=RequestMethod.POST)
	public ResponseData updateTabla(@RequestBody RequestData request) {
		return service.updateTabla(request);
	}

	@Override
	@RequestMapping(value="/delete", method=RequestMethod.POST)
	public ResponseData removeTabla(@RequestBody RequestData request) {
		return service.deleteTabla(request);
	}

}
